 <%-include ('../includes/head.ejs') %>

  <!-- Main Content -->
  <main class="container mx-auto py-6 px-4 flex-grow animate-fadeIn">
    <h1 class="text-3xl font-bold text-center text-blue-900 mb-4">Enrol as a Technician</h1>
    <p class="text-center text-gray-700 text-lg mb-6">Join our platform by filling out the form below.</p>
    <form action="/enroll" method="POST" class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
      <div class="mb-4">
        <label for="name" class="block text-sm font-semibold text-blue-900 mb-1">Full Name *</label>
        <input type="text" id="name" name="name" required class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="phone" class="block text-sm font-semibold text-blue-900 mb-1">Phone</label>
        <input type="tel" id="phone" name="phone" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-sm font-semibold text-blue-900 mb-1">Email</label>
        <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="location" class="block text-sm font-semibold text-blue-900 mb-1">Location (e.g., Lagos, Nigeria) *</label>
        <input type="text" id="location" name="location" required class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="primarySkill" class="block text-sm font-semibold text-blue-900 mb-1">Primary Skill *</label>
        <select id="primarySkill" name="primarySkill" required class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900">
          <option value="" disabled selected>Select a skill</option>
          <option value="electronics">Electronics</option>
          <option value="plumbing">Plumbing</option>
          <option value="carpentry">Carpentry</option>
          <option value="hvac">HVAC</option>
        </select>
      </div>
      <div class="mb-4">
        <label for="otherSkills" class="block text-sm font-semibold text-blue-900 mb-1">Other Skills (comma-separated)</label>
        <input type="text" id="otherSkills" name="otherSkills" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="experienceYears" class="block text-sm font-semibold text-blue-900 mb-1">Years of Experience</label>
        <input type="number" id="experienceYears" name="experienceYears" min="0" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="availability" class="block text-sm font-semibold text-blue-900 mb-1">Availability</label>
        <input type="text" id="availability" name="availability" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900" />
      </div>
      <div class="mb-4">
        <label for="about" class="block text-sm font-semibold text-blue-900 mb-1">About Yourself</label>
        <textarea id="about" name="about" rows="4" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-900"></textarea>
      </div>
      <div class="text-center">
        <button type="submit" class="bg-blue-900 text-white px-5 py-2 rounded-md shadow-md hover:bg-blue-800 hover:scale-105 transition transform">Submit</button>
      </div>
    </form>
  </main>

  <!-- Footer -->
 <%- include('../includes/end.ejs') %>